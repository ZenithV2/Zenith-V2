local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/jensonhirst/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "Zenith V2", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

local main = Window:AddTab({
    Title = "Main",
    Icon = "rbxassetid://123449248547857",
    HidePremium = false
})

local autoweight = Window:AddTab({
    Title = "Auto Weight",
    Icon = "rbxassetid://123449248547857",
    HidePremium = false
})

local autorebirth = Window:AddTab({
    Title = "Auto Rebirth",
    Icon = "rbxassetid://123449248547857",
    HidePremium = false
})

local autokill = Window:AddTab({
    Title = "Auto Kill",
    Icon = "rbxassetid://123449248547857",
    HidePremium = false
})

local autorock = Window:AddTab({
    Title = "Auto Rock",
    Icon = "rbxassetid://123449248547857",
    HidePremium = false
})

local play = Window:AddTab({
    Title = "Auto Gameplay",
    Icon = "rbxassetid://123449248547857",
    HidePremium = false
})

local misc = Window:AddTab({
    Title = "Misc",
    Icon = "rbxassetid://123449248547857",
    HidePremium = false
})

local Friends = Window:AddTab({
    Title = "Friends",
    Icon = "rbxassetid://123449248547857",
    HidePremium = false
})

local Credits = Window:AddTab({
    Title = "Credits",
    Icon = "rbxassetid://123449248547857",
    HidePremium = false
})

local SizeInput = main:AddInput("SizeChanger", {
    Title = "Size",
    Description = "Change Ur Size",
    Default = "2",
    Placeholder = "Input ur size",
    Numeric = true,
    Finished = false,
    Callback = function(Value)
        selectedSize = Value
        if _G.AutoSize then
            game:GetService("ReplicatedStorage").rEvents.changeSpeedSizeRemote:InvokeServer("changeSize", tonumber(selectedSize))
        end
    end
})

local SizeToggle = Section:AddToggle("Size", {
    Title = "Size",
    Description = "Change ur size",
    Default = false,
    Callback = function(Value)
        _G.AutoSize = Value
        if Value then
            while _G.AutoSize do
                game:GetService("ReplicatedStorage").rEvents.changeSpeedSizeRemote:InvokeServer("changeSize", tonumber(selectedSize))
                task.wait(0.1)
            end
        end
    end
})
